@model NewsWeb.Models.Domain.Tbl_Users

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<h2>Registration</h2>


@using (Html.BeginForm("Registration", "Home", FormMethod.Get, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ثبت نام در سایت</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <p>آپلود تصویر تصویر</p>
            <h2 style="text-align:center;@ViewBag.style;">@ViewBag.message</h2>
            <br />
            <div class="col-md-10">
                <input type="file" name="PicUser" value="انتخاب" />
            </div>
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName)
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Psw, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Psw)
                @Html.ValidationMessageFor(model => model.Psw)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Discription, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Discription, new { style=@"max-width:300px;
                min-width:300px;
                min-height:150px;
                max-height:150px;"})
                @Html.ValidationMessageFor(model => model.Discription)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ncode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ncode)
                @Html.ValidationMessageFor(model => model.Ncode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Mobnumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mobnumber)
                @Html.ValidationMessageFor(model => model.Mobnumber)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-2.1.3.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
