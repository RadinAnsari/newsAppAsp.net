@model NewsWeb.Models.Domain.Tbl_ContactUs

@{
    ViewBag.Title = "DetailsContact";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<style>
    .table_d {
        border-collapse: collapse;
        width: 100%;
        font-size: 10px;
    }

        .table_d th, td {
            text-align: center;
            padding: 8px;
        }

        .table_d tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table_d th {
            background-color: #4CAF50;
            color: white;
        }

    .btn_black {
        background-color: #808080; /* Green */
        border: none;
        color: white;
        padding: 8px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 20%;
    }

    .btn_green {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        margin: 4px 2px;
        border-radius: 50%;
    }

    .box_msg {
        padding: 8px;
        text-align: center;
        text-decoration: none;
        display: block;
        margin: 4px 2px;
        border-radius: 6%;
        background-color: #f2f2f2;
        color: black;
        border: 2px solid #555555;
    }
</style>

<div>
    <dl class="dl-horizontal">
        <dt class="btn_green">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="btn_green">
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="btn_green">
            @Html.DisplayNameFor(model => model.Text)
        </dt>

        <dd class="box_msg">
            @Html.DisplayFor(model => model.Text)
        </dd>

    </dl>
</div>